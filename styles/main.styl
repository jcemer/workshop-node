@import 'nib'
@import 'normalize'

* {
    box-sizing: border-box
}

html { 
    height: 100%
}

body {
    font: 200 1.5em "Lato", sans-serif
    background: url("../images/bg.png")
    min-height: 100%
    color: #666
}



.header {
    text-align: center
    background: rgba(#4DCDC4, .8)
    overflow: hidden
    padding: 4em 0 8em 0
    margin-bottom: -4em
    box-shadow: inset 0 -2px 10px rgba(black, .02)
    p {
        margin: 0
    }
    .title {
        font: 900 3em/1.2 "Lato", sans-serif
        letter-spacing: -.04em
        margin: 0
        color: rgba(white, .95)
        text-shadow: 2px 2px 5px rgba(black, .1)
    }
}

.subtitle {
    font: 400 1.625 "Lato", sans-serif
}

.speakers {
    color: rgba(black, .2)
    text-shadow: 2px 1px 2px rgba(white, .2)
    a {
        color: white
        text-shadow: none
        &:hover {
            text-decoration: none
        }
    }
}

.content {
    max-width: 700px
    padding: 50px
    margin: auto
    background: white
    *:first-child, *:last-child {
        margin: 0
    }
    box-shadow: 0 0 10px rgba(black, .05)
}

.bar {
    overflow: hidden
    margin-bottom: 5em
}

.date, .local, .subscribe {
    width: 33%
    float: left
}

.time, .local-title {
    color: #999
    font-size: .75em
    display: block
}


.subscribe {
    background: #556270
    text-align: center
    color: white
    float: left
    border-radius: 2px
    padding: .5em 1em
    text-decoration: none
    text-shadow: 2px 2px 2px rgba(black, .1)
}
