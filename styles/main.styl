@import 'nib'
@import 'normalize'

$background-color = #68C3BC
$accent-color = #FF6B6B

* {
    box-sizing: border-box
}

html {
    height: 100%
}

body {
    font: 200 1.5em "Lato", sans-serif
    background: url("../images/bg.png")
    min-height: 100%
    color: #666
}



.header {
    text-align: center
    background: $background-color url(../images/nebula.jpg) center center
    background-size: cover
    overflow: hidden
    padding: 4em 0 6em 0
    margin-bottom: -2em
    box-shadow: inset 0 -2px 10px rgba(black, .02)
    p {
        margin: 0
    }
    .title {
        font: 900 3em/1.2 "Lato", sans-serif
        letter-spacing: -.04em
        margin: 0
        color: rgba(white, .95)
        text-shadow: 2px 2px 0px rgba(black, .15)
    }
}

.subtitle {
    font: 400 1.625 "Lato", sans-serif
}

.subtitle {
    color: $background-color
    a {
        color: white
        text-shadow: none
        text-decoration: none
        &:hover {
            text-decoration: underline
        }
    }
}

.content {
    max-width: 700px
    padding: 50px
    margin: auto
    background: white
    *:first-child, *:last-child {
        margin: 0
    }
    box-shadow: 0 0 10px rgba(black, .05)
}

.bar {
    overflow: hidden
    margin-bottom: 5em
}

.date, .local, .subscribe {
    width: 33%
    float: left
}

.time, .local-title {
    color: #999
    font-size: .75em
    display: block
}

.local-title {
    visibility: hidden
}


.subscribe {
    background: $accent-color
    text-align: center
    color: white
    float: left
    border-radius: 4px
    padding: .5em 1em
    text-decoration: none
    text-shadow: 2px 2px 2px rgba(black, .1)
    border-bottom: 3px solid ($accent-color - 20%)
    &:hover {
        background: $accent-color + 10%
    }
    &:active {
        border-bottom-width: 2px
        margin-top: 1px
    }
}
