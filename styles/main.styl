@import 'nib'
@import 'normalize'

$background-color = #68C3BC
$accent-color = #FE5C5A
$text-color = #344638
$title-color = #456260

* {
    box-sizing: border-box
}

html {
    height: 100%
}

body {
    font: 400 1em "Open Sans", sans-serif
    background: $background-color url(../images/nebula.jpg) center top 
    background-attachment: fixed
    background-size: cover
    min-height: 100%
    color: $text-color
    line-height: 1.5
}

a {
    color: #219998
    &:visited {
        color: #217978 - 20%
    }
}

.wrapper {
    background: url("../images/bg.png")
    padding: 1px
}

// Header
// -----------
.header {
    text-align: center
    padding: 3em 0 2em 0
    box-shadow: inset 0 -2px 10px rgba(black, .02)
    text-shadow: 2px 2px 0px rgba(black, .3)
    p {
        margin: 0
    }
    .title {
        font: 900 4em/1.2 "Lato", sans-serif
        margin: 0
        color: rgba(white, .95)
    }
    .subtitle {
        color: $background-color
        font-size: 1.2em
        a {
            color: white
            text-shadow: none
            text-decoration: none
            &:hover {
                text-decoration: underline
            }
        }
    }
    .date {
        font-size: 1.6em
        font-weight: 700
        color: #fff
        margin: 1em 0
    }
}

// Content
// -----------
.content {
    max-width: 860px
    padding: 20px
    margin: 0 auto
    .title, .subtitle {
        line-height: 1.2
    }
    .title {
        color: #217978
        font-size: 2em
        font-weight: 700
        margin: 0.5em 0 1em
        border-bottom: 1px solid #EEE
    }
    .subtitle {
        font-size: 1.4em
        font-weight: 700
        margin-bottom: 0.25em
    }
    section {
        padding-top: 1em
        overflow: hidden
    }
    a {
        border-bottom: 1px dotted #219998
        text-decoration: none
    }
}

.workshop-content {
    column-count: 2
    padding: 0
    margin: 0
    > li {
        display: inline-block
        padding: 1em
        line-height: 1.5
    }
    .subtitle {
        font-size: 1.2em
        margin: 0 0 0.25em
    }
}

@media (max-width: 600px) {
    .workshop-content {
        column-count: 1
    }
}

.register {
    overflow: hidden
    font-size: 1.2em
    background: $text-color + 95%
    border-radius: 4px
    height: 162px
    margin: 0.5em 0
    padding: 50px
    //border-bottom: 1px solid #DDD
    box-shadow: 0 2px 3px rgba(0,0,0,0.2)
    .box {
        width: 33%
        float: left
        font-size: 1.2em
    }
    .subscribe {
        display: block
    }
    .time, .batch, .braziljs {
        color: #999
        font-size: .75em
        display: block
        font-weight: 400
    }
    .batch {
        visibility: hidden
    }
    .braziljs {
        margin-top: .4em
        font-size: .5em
        float: right
    }
}

// Intro
// -----------
.intro {
    .logo { text-align: center }
}


// Subscribe
// -----------
.subscribe {
    background: $accent-color
    text-align: center
    color: white !important
    display: inline-block
    border-radius: 4px
    padding: .5em 1em
    text-decoration: none
    text-shadow: -1px -1px 0 rgba(black, .2)
    border-bottom: 3px solid ($accent-color - 20%) !important
    font-weight: 400
    &:hover {
        background: $accent-color + 10%
    }
    &:active {
        border-bottom-width: 2px !important
        margin-top: 1px
    }
}

// Speaker
// -----------
.speaker {
    width: 50%
    padding: 0 2em 2em
    float: left
    .subtitle {
        margin-bottom: 0
    }
    .links a {
        font-size: 0.9em
        border: 0
    }
    .photo {
        border-radius: 50%
        margin-right: 1em
        float: left
    }
     p a {
        text-decoration: none
     }
}

// Map
// -----------
.map {
    width: 100%
}

// Tail
// -----------
.tail {
    text-align: center
    padding: 80px 0 80px 0
    color: white
    font-size: 1.5em
    p {
        font-size: 1.25em
        font-style: italic
        text-shadow: 2px 2px 0px rgba(black, .15)
    }
}
