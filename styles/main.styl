@import 'nib'
@import 'normalize'

$background-color = #68C3BC
$accent-color = #FE5C5A
$text-color = #344638
$title-color = #455260

* {
    box-sizing: border-box
}

html {
    height: 100%
}

body {
    font: 400 1em "Open Sans", sans-serif
    background: $background-color url(../images/nebula.jpg) center top 
    background-attachment: fixed
    background-size: cover
    min-height: 100%
    color: $text-color
}

.wrapper {
    background: url("../images/bg.png")
    padding: 1px
}

// Header
// -----------
.header {
    text-align: center
    padding: 4em 0 6em 0
    box-shadow: inset 0 -2px 10px rgba(black, .02)
    p {
        margin: 0
    }
    .title {
        font: 900 4em/1.2 "Lato", sans-serif
        margin: 0
        color: rgba(white, .95)
        text-shadow: 2px 2px 0px rgba(black, .15)
    }
    .subtitle {
        color: $background-color
        a {
            color: white
            text-shadow: none
            text-decoration: none
            &:hover {
                text-decoration: underline
            }
        }
    }
}

// Content
// -----------
.content {
    max-width: 760px
    padding: 50px
    margin: -50px auto
    background: white
    box-shadow: 0 0 10px rgba(black, .1)
    border-radius: 4px
    .title, .subtitle {
        color: $title-color
        line-height: 1.2
    }
    .title {
        font-size: 2em
        font-weight: 700
        margin-bottom: 0.5em
        padding: 0.5em 0
        border-bottom: 1px dotted $text-color + 80%
    }
    .subtitle {
        font-size: 1.4em
        font-weight: 700
        margin-bottom: 0.25em
    }
    section {
        padding-top: 1em
        overflow: hidden
    }
}

// Bar
// -----------
.bar {
    overflow: hidden
    font-size: 1.25em
    background: $text-color + 93%
    border-radius: 4px
    height: 158px
    margin: -50px -50px 20px -50px
    padding: 50px
    border-bottom: 1px dotted #CCC
    .box {
        width: 33%
        float: left
    }
    .subscribe {
        display: block
    }
    .time, .batch, .braziljs {
        color: #999
        font-size: .75em
        display: block
    }
    .braziljs {
        margin-top: .4em
        font-size: .6em
        float: right
    }
}


// Subscribe
// -----------
.subscribe {
    background: $accent-color
    text-align: center
    color: white
    display: inline-block
    border-radius: 4px
    padding: .5em 1em
    text-decoration: none
    text-shadow: -1px -1px 0 rgba(black, .2)
    border: 1px solid ($accent-color - 5%)
    border-bottom: 3px solid ($accent-color - 20%)
    &:hover {
        background: $accent-color + 10%
    }
    &:active {
        border-bottom-width: 2px
        margin-top: 1px
    }
}

// Speaker
// -----------
.speaker {
    width: 45%
    float: left
    + .speaker {
        float: right
    }
    .subtitle {
        margin-bottom: -.2em
    }
    .photo {
        border-radius: 50%
        float: left
        margin-right: .4em
    }
}

// Map
// -----------
.map {
    width: 100%
}

// Tail
// -----------
.tail {
    text-align: center
    padding: 200px 0 150px 0
    color: white
    font-size: 1.5em
    p {
        font-size: 1.25em
        font-style: italic
        text-shadow: 2px 2px 0px rgba(black, .15)
    }
}
