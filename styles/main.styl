@import 'nib'
@import 'normalize'

$background-color = #68C3BC
$accent-color = #FE3C1A

* {
    box-sizing: border-box
}

html {
    height: 100%
}

body {
    font: 200 1.2em "Lato", sans-serif
    background: url("../images/bg.png")
    min-height: 100%
    color: #666
}


// Header
// -----------
.header {
    text-align: center
    background: $background-color url(../images/nebula.jpg) center top 
    background-attachment: fixed
    background-size: cover
    padding: 4em 0 6em 0
    margin-bottom: -2em
    box-shadow: inset 0 -2px 10px rgba(black, .02)
    p {
        margin: 0
    }
    .title {
        font: 900 4em/1.2 "Lato", sans-serif
        letter-spacing: -.04em
        margin: 0
        color: rgba(white, .95)
        text-shadow: 2px 2px 0px rgba(black, .15)
    }
    .subtitle {
        font: 400 1.25em "Lato", sans-serif
        color: $background-color
        a {
            color: white
            text-shadow: none
            text-decoration: none
            &:hover {
                text-decoration: underline
            }
        }
    }
}

// Content
// -----------
.content {
    max-width: 760px
    padding: 50px
    margin: auto
    background: white
    box-shadow: 0 0 10px rgba(black, .05)
    .title {
        font-size: 1.5em
        color: #2A8370
    }
    .subtitle {
        font-size: 1.2em
        margin-top: .25em       
    }
    section {
        padding-top: 1em
        overflow: hidden
    }
}

// Bar
// -----------
.bar {
    overflow: hidden
    font-size: 1.25em
    margin-bottom: 1em
    .date, .investment, .subscribe {
        width: 33%
        float: left
    }
    .time, .batch {
        color: #999
        font-size: .75em
        display: block
    }
    .batch {
        visibility: hidden
    }
}


// Subscribe
// -----------
.subscribe {
    background: $accent-color
    text-align: center
    color: white
    float: left
    border-radius: 4px
    padding: .5em 1em
    text-decoration: none
    text-shadow: 2px 2px 2px rgba(black, .1)
    border-bottom: 3px solid ($accent-color - 20%)
    &:hover {
        background: $accent-color + 10%
    }
    &:active {
        border-bottom-width: 2px
        margin-top: 1px
    }
}

// Speaker
// -----------
.speaker {
    width: 45%
    float: left
    + .speaker {
        float: right
    }
    .subtitle {
        margin-bottom: -.2em
    }
    .photo {
        border-radius: 50%
        float: left
        margin-right: .4em
    }
